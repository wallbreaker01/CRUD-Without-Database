<%- include("./partials/header")  %>


<nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">ToDo App</a>
    </div>
  </nav>
<div class="container">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
        <input type="submit" value="Add Task" class="btn btn-md btn-primary mx-2">
    </form>
    <ul class="list-group my-5">
        <% todo.forEach(todos => { %>
            <li class="list-group-item"><%= todos.todo %> <a href="/delete/todo/<%= todos._id %>"
                class="btn btn-danger btn-sm">Delete</a></li>
            

        <% }) %>
      </ul>
</div>


  

<%- include("./partials/footer")  %>